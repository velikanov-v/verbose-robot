@{
    ViewData["Title"] = "Edit";
}

@model SecondProject.Models.Group
@{
    ViewBag.Title = "Группы";
}

<form asp-action="edit" asp-controller="Home" asp-route-groupid="@Model.GroupId" >
    <div class="form-group">
        <label asp-for="GroupName" class="control-label">Группа</label>
        <input type="text" asp-for="GroupName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Teacher" class="control-label">Учитель</label>
        <input type="text" asp-for="Teacher" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>