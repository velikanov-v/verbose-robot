
@{
    ViewData["Title"] = "StudentRed";
}

@model TestProject.Models.Team
@{
    ViewBag.Title = "Студенты";
}
<form asp-action="StudentEdit" asp-controller="Home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="GroupName" class="control-label">Группа -@Model.GroupName </label>
           </div>
    <div class="form-group">
        <label asp-for="Teacher" class="control-label">Учитель - @Model.Teacher</label>
            </div>
    <div class="form-group">
        <label asp-for="Number" class="control-label">Число студентов</label>
        <input type="number" asp-for="Number" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
